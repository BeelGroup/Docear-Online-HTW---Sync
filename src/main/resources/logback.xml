<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss} %-5level %logger{8} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="uk.org.lidalia.sysoutslf4j.context" level="OFF"/>

    <root level="debug">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>